<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:id="@+id/relative_layout"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/other_gift_image_view"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/other_gift_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/other_gift_image_view"
        android:textColor="@color/black"
        tools:text="name" />

    <TextView
        android:id="@+id/other_gift_description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/other_gift_image_view"
        android:layout_below="@id/other_gift_name"
        android:textColor="@color/black"
        tools:text="Description" />

    <TextView
        android:id="@+id/other_gift_price"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/other_gift_image_view"
        android:layout_below="@id/other_gift_description"
        android:textColor="@color/black"
        tools:text="Price" />

    <TextView
        android:id="@+id/priority"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/other_gift_image_view"
        android:layout_below="@id/other_gift_price"
        android:textColor="@color/black"
        tools:text="Priority" />

    <Button
        android:id="@+id/reserveGiftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/other_gift_description"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-13dp"
        android:layout_marginEnd="12dp"
        android:text="Reserve"
        app:backgroundTint="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.748" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/priority"
        android:orientation="horizontal"
        android:gravity="center_vertical">

    </LinearLayout>

</RelativeLayout>